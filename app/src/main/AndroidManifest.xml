<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jh.wxqb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission
        android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission
        android:name="android.permission.CHANGE_CONFIGURATION"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/logo_white"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning,UnusedAttribute"
        tools:replace="android:theme">

        <!-- UI原型尺寸 -->
        <meta-data
            android:name="design_width"
            android:value="720" />
        <meta-data
            android:name="design_height"
            android:value="1280" />
        <!--适配华为（huawei）刘海屏-->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />
        <!--适配小米（xiaomi）刘海屏-->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.jh.wxqb.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


        <activity
            android:name=".ui.home.login.StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.home.login.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--友盟分享-->
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".base.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ui.home.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.home.ScanningCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.home.login.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.home.login.ForgetPwdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.NationalDepartureActivity"
            android:screenOrientation="portrait" />

        <service android:name=".utils.DownloadService" />

        <activity
            android:name=".ui.home.NewsListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.home.NewsInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.home.MyMessageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.home.MessageInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.FinancialDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.UserInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.mysendletter.MySendLetterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.RecommendActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.UdpPwdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.BindingAccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.MyTeamActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.feedback.FeedbackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.feedback.PlusImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.feedback.FeedbackListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.feedback.FeedbackInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.mysendletter.OrderInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.ChangeImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.assets.WithdrawMoneyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.assets.TurnOutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.assets.TurnInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.market.CurrentEntrustmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.market.MoreBusinessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.market.PurchaseOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.market.HandicapDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.assets.PunchingMoneyActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>