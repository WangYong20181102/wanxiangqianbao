<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 标题模板自定义属性 -->
    <declare-styleable name="CustomTitle">
        <!-- 标题文案 -->
        <attr name="titleText" format="string" />
        <!-- 是否有back按钮 -->
        <attr name="canBack" format="boolean" />
        <!-- back按钮文案 -->
        <attr name="backText" format="string" />
        <!-- 右侧更多功能按钮图片 -->
        <attr name="moreImg" format="reference" />
        <!-- 右侧更多功能按钮文字 -->
        <attr name="moreText" format="string" />
        <attr name="tittle_bg" format="color"  />
    </declare-styleable>

    <declare-styleable name="XMarqueeView">
        <attr name="isSetAnimDuration" format="boolean" />
        <attr name="isSingleLine" format="boolean" />
        <attr name="marquee_interval" format="integer|reference" />
        <attr name="marquee_animDuration" format="integer|reference" />
        <attr name="marquee_textSize" format="dimension|reference"/>
        <attr name="marquee_textColor" format="color|reference"/>
    </declare-styleable>
    <declare-styleable name="HandicapView">
        <attr name="buy_bg_color" format="color" />
        <attr name="sell_bg_color" format="color" />
        <attr name="buy_text_color" format="color" />
        <attr name="sell_text_color" format="color" />
        <attr name="title_text_color" format="color" />
        <attr name="item_number_color" format="color"/>
        <attr name="title_text_size" format="dimension" />
        <attr name="title_text_padding" format="dimension"/>
        <attr name="item_text_size" format="dimension" />
        <attr name="about_size" format="dimension"/>
        <attr name="now_price_size" format="dimension"/>
        <attr name="now_price_padding" format="dimension"/>
        <attr name="now_price_line_height" format="dimension"/>
        <attr name="text_padding_end" format="dimension"/>
        <attr name="text_padding_start" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="chartView">
        <attr name="xylinecolor" />
        <attr name="xylinewidth" />
        <attr name="xytextcolor" />
        <attr name="xytextsize" />
        <attr name="linecolor" />
        <attr name="interval" />
        <attr name="bgcolor" />
        <attr name="isScroll" />
    </declare-styleable>
</resources>