<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.me.feedback.FeedbackActivity">

    <com.jh.wxqb.customview.CustomTitle
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:moreImg="@mipmap/feedback_list"
        app:titleText="@string/user_feedback" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d302"
        android:layout_marginLeft="@dimen/d31"
        android:layout_marginTop="@dimen/d23"
        android:layout_marginRight="@dimen/d31"
        android:background="@drawable/customer_feedback_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:layout_marginRight="@dimen/d16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/feedback_feedback"
                android:textStyle="bold"
                android:textColor="@color/color_646482"
                android:textSize="@dimen/s16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_current_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_646482"
                    android:textSize="@dimen/s16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/300"
                    android:textColor="@color/color_646482"
                    android:textSize="@dimen/s16"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d138"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:background="@drawable/customer_feedback_et_bg"
            android:gravity="start"
            android:hint="@string/please_input_your_valuable_opinions"
            android:maxLength="300"
            android:padding="@dimen/d16"
            android:textColor="@color/color_484859"
            android:textColorHint="@color/color_C0C0CC"
            android:textSize="@dimen/s14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/d6"
                android:layout_height="@dimen/d6"
                android:background="@color/color_9393A8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_20"
                android:text="@string/add_image"
                android:textColor="@color/color_9393A8"
                android:textSize="@dimen/s14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d65"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.jh.wxqb.customview.NoScrollGridView
                android:id="@+id/gridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:columnWidth="@dimen/iv_30"
                android:horizontalSpacing="10dp"
                android:numColumns="4"
                android:verticalSpacing="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_add_img"
                android:layout_width="@dimen/d54"
                android:layout_height="@dimen/d54"
                android:layout_marginLeft="@dimen/d16"
                android:src="@mipmap/iv_add" />
        </LinearLayout>
    </LinearLayout>

    <com.meetsl.scardview.SCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d54"
        android:layout_marginLeft="@dimen/d31"
        android:layout_marginTop="@dimen/d42"
        android:layout_marginRight="@dimen/d31"
        android:layout_marginBottom="@dimen/d20"
        app:cardBackgroundColor="@color/color_828BE9"
        app:cardCornerRadius="@dimen/d16"
        app:cardElevation="@dimen/d3"
        app:cardLightDirection="top"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/d0"
        app:contentPaddingTop="-3dp">

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/commit_feedback"
            android:textColor="@color/white"
            android:textSize="@dimen/d19"
            android:textStyle="bold" />
    </com.meetsl.scardview.SCardView>

</LinearLayout>
