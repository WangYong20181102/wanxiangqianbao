<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_style">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_120">

        <RelativeLayout
            android:id="@+id/ll_layout"
            android:layout_width="@dimen/iv_150"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_yes_email"
                android:layout_width="@dimen/iv_105"
                android:layout_height="@dimen/iv_100"
                android:src="@drawable/iv_no_email"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_no_email"
                android:layout_width="@dimen/iv_105"
                android:layout_height="@dimen/iv_72"
                android:src="@drawable/iv_yes_email"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iv_45"
            android:layout_marginTop="@dimen/iv_28"
            android:layout_toRightOf="@id/ll_layout"
            android:text="關於配資俱樂部遊戲規則說明"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/iv_45"
            android:layout_marginTop="@dimen/iv_20"
            android:layout_toRightOf="@id/ll_layout"
            android:text="2018-08-20 15:20"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_22" />

    </RelativeLayout>

</RelativeLayout>