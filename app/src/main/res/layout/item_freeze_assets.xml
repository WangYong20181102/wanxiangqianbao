<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_style"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_200"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:layout_marginTop="@dimen/iv_10"
        android:layout_marginBottom="@dimen/iv_20"
        android:background="@drawable/shape_assets_bg">

        <LinearLayout
            android:id="@+id/ll_pkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iv_24"
            android:layout_marginTop="@dimen/iv_30"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_left_icon"
                android:layout_width="@dimen/iv_32"
                android:layout_height="@dimen/iv_35"
                android:src="@drawable/icon_usdt_small" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_6"
                android:text="USDT"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_26" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_can_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_pkb"
            android:layout_marginLeft="@dimen/iv_32"
            android:layout_marginTop="@dimen/iv_28"
            android:text="@string/can_use"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_20"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_assets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_pkb"
            android:layout_marginLeft="@dimen/iv_30"
            android:layout_marginTop="@dimen/iv_20"
            android:text="0.0"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_40" />

        <ImageView
            android:id="@+id/image_right_icon"
            android:layout_width="@dimen/iv_142"
            android:layout_height="@dimen/iv_115"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/iv_42"
            android:layout_marginRight="@dimen/iv_48"
            android:src="@drawable/icon_usdt_right" />

    </RelativeLayout>

</LinearLayout>