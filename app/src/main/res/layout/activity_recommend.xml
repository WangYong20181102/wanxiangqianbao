<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/recommend_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.me.RecommendActivity">

    <com.jh.wxqb.customview.CustomTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="@string/my_recommendation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/color_eff2f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d114"
            android:layout_height="@dimen/d85"
            android:layout_marginTop="@dimen/d20"
            android:layout_marginLeft="@dimen/d20"
            android:src="@drawable/login_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="@dimen/d150"
                android:layout_height="@dimen/d150"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d20" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_30"
                android:layout_marginTop="@dimen/d20"
                android:layout_marginRight="@dimen/iv_30"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_30" />

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="@dimen/iv_306"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d30"
                android:layout_marginBottom="@dimen/iv_100"
                android:background="@drawable/all_btn_bg"
                android:gravity="center"
                android:text="@string/copy"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_30" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
