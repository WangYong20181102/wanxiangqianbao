<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_180"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.jh.wxqb.customview.CircleImageView
            android:id="@+id/iv_user_img"
            android:layout_width="@dimen/iv_50"
            android:layout_height="@dimen/iv_50"
            android:layout_marginTop="@dimen/iv_56"
            android:src="@drawable/iv_user" />

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iv_22"
            android:layout_marginTop="@dimen/iv_45"
            android:layout_toRightOf="@id/iv_user_img"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/iv_24" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000000000"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/iv_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_number"
            android:layout_marginLeft="@dimen/iv_22"
            android:layout_toRightOf="@id/iv_user_img"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="@dimen/iv_60"
                android:layout_height="@dimen/iv_60"
                android:src="@drawable/iv_in" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_number"
                android:layout_marginLeft="@dimen/iv_12"
                android:layout_toRightOf="@id/iv_user_img"
                android:text="18854695476"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/iv_30" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/iv_42"
            android:text="@string/turn_out"
            android:textColor="@color/red_text"
            android:textSize="@dimen/iv_22" />

        <LinearLayout
            android:id="@+id/ll_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_type"
            android:layout_marginTop="@dimen/iv_18"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_eth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/iv_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_5"
                android:text="TGM"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/iv_22" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_num"
            android:layout_marginTop="@dimen/iv_10"
            android:text="2018-08-03 15:30:26"
            android:textColor="@color/me_code_color"
            android:textSize="@dimen/iv_22" />

    </RelativeLayout>

</RelativeLayout>