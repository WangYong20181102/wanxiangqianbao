<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.home.login.RegisterActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/d23"
        android:layout_height="@dimen/d23"
        android:layout_marginLeft="@dimen/d18"
        android:layout_marginTop="@dimen/d23"
        android:src="@mipmap/iv_back" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d25"
                android:src="@mipmap/top_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d43"
                android:layout_marginLeft="@dimen/d23"
                android:layout_marginTop="@dimen/d35"
                android:layout_marginRight="@dimen/d23"
                android:background="@drawable/login_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/username"
                    android:inputType="textVisiblePassword"
                    android:paddingLeft="@dimen/d10"
                    android:paddingRight="@dimen/d10"
                    android:textColor="@color/color_484859"
                    android:textColorHint="@color/color_C0C0CC"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d43"
                android:layout_marginLeft="@dimen/d23"
                android:layout_marginTop="@dimen/d19"
                android:layout_marginRight="@dimen/d23"
                android:background="@drawable/login_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/mobile_phone_number"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/d10"
                    android:paddingRight="@dimen/d10"
                    android:textColor="@color/color_484859"
                    android:textColorHint="@color/color_C0C0CC"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d43"
                android:layout_marginLeft="@dimen/d23"
                android:layout_marginTop="@dimen/d19"
                android:layout_marginRight="@dimen/d23"
                android:background="@drawable/login_item_bg">

                <EditText
                    android:id="@+id/ed_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/login_pwd"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/d10"
                    android:paddingRight="@dimen/d10"
                    android:textColor="@color/color_484859"
                    android:textColorHint="@color/color_C0C0CC"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/ll_is_show_pwd"
                    android:layout_width="@dimen/d30"
                    android:layout_height="@dimen/d30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d8"
                    android:background="@drawable/login_eyes_bg">

                    <ImageView
                        android:id="@+id/iv_pwd"
                        android:layout_width="@dimen/d24"
                        android:layout_height="@dimen/d24"
                        android:layout_centerInParent="true"
                        android:src="@drawable/iv_no_pwd" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d43"
                android:layout_marginLeft="@dimen/d23"
                android:layout_marginTop="@dimen/d19"
                android:layout_marginRight="@dimen/d23">

                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_code"
                    android:background="@drawable/login_item_bg"
                    android:hint="@string/enter_code"
                    android:inputType="number"
                    android:paddingLeft="@dimen/d10"
                    android:paddingRight="@dimen/d10"
                    android:textColor="@color/color_484859"
                    android:textColorHint="@color/color_C0C0CC"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d11"
                    android:background="@drawable/shape_btn_rig_bg"
                    android:gravity="center"
                    android:text="@string/get_code"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d43"
                android:layout_marginLeft="@dimen/d23"
                android:layout_marginTop="@dimen/d19"
                android:layout_marginRight="@dimen/d23"
                android:background="@drawable/login_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_invitation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/please_input_invitation_code"
                    android:paddingLeft="@dimen/d10"
                    android:paddingRight="@dimen/d10"
                    android:textColor="@color/color_484859"
                    android:textColorHint="@color/color_C0C0CC"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d43"
                android:layout_marginLeft="@dimen/d25"
                android:layout_marginTop="@dimen/d60"
                android:layout_marginRight="@dimen/d25"
                android:background="@drawable/login_btn_bg"
                android:gravity="center"
                android:text="@string/confirmation_of_registration"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/d15"
                android:textSize="@dimen/d19"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
