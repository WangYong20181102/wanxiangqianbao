                            <!--android:orientation="horizontal"-->
                            <!--android:visibility="gone">-->

                            <!--<View-->
                                <!--android:layout_width="@dimen/d3"-->
                                <!--android:layout_height="@dimen/d17"-->
                                <!--android:layout_marginLeft="@dimen/d15"-->
                                <!--android:background="@color/color_18293D" />-->

                            <!--<TextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_marginLeft="@dimen/d9"-->
                                <!--android:text="TGM日线走势图"-->
                                <!--android:textColor="@color/color_18293D"-->
                                <!--android:textSize="@dimen/s15" />-->

                        <!--</LinearLayout>-->

                        <!--<com.jh.wxqb.customview.NestedScrollWebView-->
