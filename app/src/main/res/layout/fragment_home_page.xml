<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_98"
        android:background="@drawable/shape_state_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/home"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_32"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/d194"
            android:layout_height="@dimen/d26"
            android:layout_centerInParent="true"
            android:src="@mipmap/home_title_logo" />

        <RelativeLayout
            android:id="@+id/ll_message"
            android:layout_width="@dimen/iv_100"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/iv_32"
                android:layout_height="@dimen/iv_32"
                android:src="@drawable/nav_news" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/color_eff2f4" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/decorate_com_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_behavior=".customview.CustomBehavior"
                android:fitsSystemWindows="true"
                app:elevation="@dimen/d0">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/decorate_com_collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d150">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/view_pager"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d150" />

                            <LinearLayout
                                android:id="@+id/ll_points"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d25"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/d10"
                                android:gravity="center"
                                android:orientation="horizontal" />
                        </RelativeLayout>


                        <!--<LinearLayout-->
