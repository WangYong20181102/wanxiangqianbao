<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_style"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_220"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:layout_marginTop="@dimen/iv_20"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_200"
            android:background="@drawable/shape_assets_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_30"
                android:layout_marginTop="@dimen/iv_30"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_money_img"
                    android:layout_width="@dimen/iv_32"
                    android:layout_height="@dimen/iv_35"
                    android:src="@drawable/iv_tgm_small" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/iv_10"
                    android:text="TGM"
                    android:textColor="@color/white"
                    android:textSize="@dimen/iv_26" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_assets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_30"
                android:layout_marginTop="@dimen/iv_28"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_32"
                android:layout_marginTop="@dimen/iv_20"
                android:text="@string/active_assets"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_26" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_tran"
            android:layout_width="@dimen/iv_100"
            android:layout_height="@dimen/iv_50"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/iv_40"
            android:layout_marginRight="@dimen/iv_26"
            android:layout_toLeftOf="@+id/tv_withdraw_money"
            android:background="@drawable/shape_detail_bg"
            android:gravity="center"
            android:text="@string/punching_money"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_30" />
        <ImageView
            android:layout_width="@dimen/iv_120"
            android:layout_height="@dimen/iv_150"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/iv_40"
            android:layout_marginTop="@dimen/iv_20"
            android:src="@drawable/iv_tgm_right" />
        <TextView
            android:id="@+id/tv_withdraw_money"
            android:layout_width="@dimen/iv_100"
            android:layout_height="@dimen/iv_50"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/iv_40"
            android:layout_marginRight="@dimen/iv_26"
            android:background="@drawable/shape_detail_bg"
            android:gravity="center"
            android:text="@string/withdraw_money"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_30" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_20"
        android:background="@color/color_title"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sw_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:overScrollMode="never"
        android:scrollbars="none">

        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/shop_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
