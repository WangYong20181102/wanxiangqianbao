<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d50"
    android:layout_marginTop="@dimen/d5"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d18"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/d23"
            android:layout_height="@dimen/d23"
            android:src="@mipmap/iv_back" />

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d56"
        android:maxLength="12"
        android:maxLines="1"
        android:textColor="@color/color_28283C"
        android:textSize="@dimen/s23"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d31"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="@dimen/d31"
            android:layout_height="@dimen/d31"/>

        <TextView
            android:id="@+id/txt_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/iv_90"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingRight="@dimen/iv_26"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_30"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>