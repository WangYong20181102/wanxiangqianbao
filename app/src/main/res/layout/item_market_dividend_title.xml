<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_style"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iv_20"
            android:layout_marginRight="@dimen/iv_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_80"
                android:gravity="center"
                android:background="@drawable/et_bg_line"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_entrust_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/iv_10"
                    android:layout_weight="1"
                    android:hint="@string/entrustment_number"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:textColorHint="@color/white"
                    android:textColor="@color/my_dividend_color"
                    android:textSize="@dimen/iv_24" />

                <TextView
                    android:id="@+id/tv_dividend_pkb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dividend_pkb"
                    android:textColor="@color/white"
                    android:textSize="@dimen/iv_24"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_entrust_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活動ETH"
                        android:textColor="@color/white"
                        android:textSize="@dimen/iv_24" />

                    <ImageView
                        android:id="@+id/iv_down"
                        android:layout_width="@dimen/iv_20"
                        android:layout_height="@dimen/iv_10"
                        android:layout_marginLeft="@dimen/iv_10"
                        android:src="@drawable/iv_down" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_90"
                android:layout_marginTop="@dimen/iv_20"
                android:background="@drawable/et_bg_line">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/iv_10"
                    android:text="@string/expected_to_obtain"
                    android:textColor="@color/white"
                    android:textSize="@dimen/iv_24" />

                <TextView
                    android:id="@+id/tv_expected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/iv_10"
                    android:layout_toLeftOf="@+id/tv_company"
                    android:text="0.0"
                    android:textColor="@color/color_02c289"
                    android:textSize="@dimen/iv_24" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="PKB"
                    android:textSize="@dimen/iv_24" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iv_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/the_current_price"
                    android:textColor="@color/color_02c289"
                    android:textSize="@dimen/iv_24" />

                <TextView
                    android:id="@+id/tv_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@color/color_02c289"
                    android:textSize="@dimen/iv_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iv_66"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_eth_balance"
                    android:textColor="@color/color_02c289"
                    android:textSize="@dimen/iv_24" />

                <TextView
                    android:id="@+id/tv_current_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@color/color_02c289"
                    android:textSize="@dimen/iv_24" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_80"
                android:layout_marginTop="@dimen/iv_20"
                android:background="@drawable/et_bg_line">

                <EditText
                    android:id="@+id/ed_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/iv_80"
                    android:layout_marginLeft="@dimen/iv_20"
                    android:hint="@string/pay_pwd"
                    android:background="@null"
                    android:inputType="numberPassword"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/iv_24" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_dividends"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/iv_16"
                android:background="@color/color_02c289"
                android:gravity="center"
                android:text="@string/access_to_dividends"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_30" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iv_10"
            android:layout_marginRight="@dimen/iv_20"
            android:layout_weight="1"
            android:background="@color/color_style"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iv_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/pan_mouth"
                    android:textColor="@color/white"
                    android:textSize="@dimen/iv_20" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/price"
                    android:textColor="@color/white"
                    android:textSize="@dimen/iv_20" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/market_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/iv_20" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/shop_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_1"
                android:layout_marginLeft="@dimen/iv_20"
                android:layout_marginRight="@dimen/iv_20"
                android:background="@color/color_1b2a3e" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/shop_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_80"
        android:layout_marginTop="@dimen/iv_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/iv_20"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/iv_6"
                android:layout_height="@dimen/iv_26"
                android:background="@color/home_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_20"
                android:text="@string/current_business"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_28" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_sel_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/iv_50"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/look_at_more"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_20" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:background="@color/color_1b2a3e" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_60"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/time"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_20" />

        <LinearLayout
            android:id="@+id/ll_sel_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dividend"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_20" />

            <ImageView
                android:id="@+id/iv_business_down"
                android:layout_width="@dimen/iv_20"
                android:layout_height="@dimen/iv_10"
                android:layout_marginLeft="@dimen/iv_10"
                android:src="@drawable/iv_down" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/market_number"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_20" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/trade_volume"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_20" />

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/action"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_20" />
    </LinearLayout>
</LinearLayout>