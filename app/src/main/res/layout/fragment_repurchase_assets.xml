<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_style"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.assets.RepurchaseAssetsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_200"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@drawable/shape_assets_bg">

        <LinearLayout
            android:id="@+id/ll_pkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iv_24"
            android:layout_marginTop="@dimen/iv_30"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/iv_36"
                android:layout_height="@dimen/iv_36"
                android:src="@drawable/iv_pkb"
                app:layout_auto_baseheight="width" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_6"
                android:text="PKB"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_26" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_assets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_pkb"
            android:layout_marginLeft="@dimen/iv_30"
            android:layout_marginTop="@dimen/iv_20"
            android:text="0.0"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_40" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_assets"
            android:layout_marginLeft="@dimen/iv_32"
            android:layout_marginTop="@dimen/iv_20"
            android:text="@string/repurchase_assets"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_26" />

        <ImageView
            android:layout_width="@dimen/iv_142"
            android:layout_height="@dimen/iv_115"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/iv_48"
            android:layout_marginTop="@dimen/iv_42"
            android:src="@drawable/iv_assets" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_20"
        android:layout_marginTop="@dimen/iv_20"
        android:background="@color/color_title" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sw_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:overScrollMode="never"
        android:scrollbars="none">

        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/shop_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
