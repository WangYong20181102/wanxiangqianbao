<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.market.PurchaseOrderActivity">


    <com.jh.wxqb.customview.CustomTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="@string/order_details" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:layout_marginTop="@dimen/iv_18">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sell"
                android:textColor="@color/red_text"
                android:textSize="@dimen/iv_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_10"
                android:text="TGM/USDT"
                android:textColor="@color/black_text"
                android:textSize="@dimen/iv_28"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/sell"
            android:textColor="@color/home_text_color"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delegate_quantity"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_delegate_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.0"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turnover"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.0"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_turnover"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_total_turnover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.0"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-06-07 14:30:28"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:layout_marginTop="@dimen/iv_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_eth_quantity"
            android:textColor="@color/red_text"
            android:textSize="@dimen/iv_24" />

        <TextView
            android:id="@+id/tv_current_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="@color/red_text"
            android:textSize="@dimen/iv_24" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginTop="@dimen/iv_160"
        android:text="@string/pay_pwd"
        android:textColor="@color/light_gray_text"
        android:textSize="@dimen/iv_26" />

    <RelativeLayout
        android:layout_marginTop="@dimen/iv_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg">

        <EditText
            android:id="@+id/ed_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/iv_30"
            android:background="@android:color/transparent"
            android:hint="@string/please_input_pay_pwd"
            android:inputType="numberPassword"
            android:textColor="@color/home_text_color"
            android:textColorHint="@color/me_code_color"
            android:textSize="@dimen/iv_28" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_purchase_immediately"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:layout_marginTop="@dimen/iv_30"
        android:background="@color/home_text_color"
        android:gravity="center"
        android:text="@string/purchase_immediately"
        android:textColor="@color/white"
        android:textSize="@dimen/iv_30" />
</LinearLayout>
