<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_120">

        <ImageView
            android:id="@+id/iv_yes_email"
            android:layout_width="@dimen/iv_105"
            android:layout_height="@dimen/iv_100"
            android:layout_marginLeft="@dimen/iv_40"
            android:layout_marginTop="@dimen/iv_10"
            android:src="@drawable/iv_no_email"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_no_email"
            android:layout_width="@dimen/iv_105"
            android:layout_height="@dimen/iv_72"
            android:layout_marginLeft="@dimen/iv_40"
            android:layout_marginTop="@dimen/iv_25"
            android:src="@drawable/iv_yes_email"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/iv_400"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iv_188"
            android:layout_marginTop="@dimen/iv_28"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="您的問題“轉賬一直顯示…”有了新的回復"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/iv_188"
            android:layout_marginTop="@dimen/iv_20"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2018-08-20 15:20"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_22" />
    </RelativeLayout>

</RelativeLayout>