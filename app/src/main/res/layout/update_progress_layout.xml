<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/iv_640"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/iv_640"
            android:layout_height="@dimen/iv_320">

            <LinearLayout
                android:id="@+id/ll_bg"
                android:layout_width="@dimen/iv_600"
                android:layout_height="@dimen/iv_302"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/iv_18"
                android:background="@drawable/iv_udp_bg">

                <TextView
                    android:text="@string/new_version"
                    android:layout_marginTop="@dimen/iv_80"
                    android:layout_marginLeft="@dimen/iv_50"
                    android:textColor="@color/white"
                    android:textSize="@dimen/iv_40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_marginTop="@dimen/iv_20"
                    android:layout_marginLeft="@dimen/iv_50"
                    android:textColor="@color/white"
                    android:textSize="@dimen/iv_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_close"
                android:paddingBottom="@dimen/iv_30"
                android:paddingLeft="@dimen/iv_30"
                android:layout_width="@dimen/iv_80"
                android:layout_height="@dimen/iv_80"
                android:layout_alignParentRight="true"
                android:src="@drawable/home_wrong" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/iv_600"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_app_udp_bg"
            android:orientation="vertical">

            <TextView
                android:lineSpacingMultiplier="1.2"
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_76"
                android:layout_marginRight="@dimen/iv_76"
                android:layout_marginTop="@dimen/iv_50"
                android:textColor="@color/black_text"
                android:textSize="@dimen/iv_26" />

            <TextView
                android:id="@+id/tv_udp"
                android:layout_width="@dimen/iv_208"
                android:layout_height="@dimen/iv_78"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/iv_50"
                android:layout_marginTop="@dimen/iv_50"
                android:background="@drawable/shape_app_udp_bg"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_30"
                android:visibility="visible" />

            <com.jh.wxqb.customview.NumberProgressBar
                android:id="@+id/number_progress"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/iv_20"
                android:layout_marginRight="@dimen/iv_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_100"
                android:layout_marginTop="@dimen/iv_50" />

            <TextView
                android:layout_marginBottom="@dimen/iv_20"
                android:visibility="gone"
                android:id="@+id/update_tv"
                android:layout_width="@dimen/iv_635"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/iv_30"
                android:gravity="center_horizontal"
                android:text="新版本正在更新,請稍等..."
                android:textColor="@color/blue"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>