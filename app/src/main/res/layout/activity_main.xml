<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.jh.wxqb.customview.NoScrollMainPager
        android:id="@+id/layout_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/iv_98" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_100"
        android:background="@color/color_16263e"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_98"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/iv_44"
                android:layout_height="@dimen/iv_44"
                android:layout_marginTop="@dimen/iv_6"
                android:src="@drawable/home_true"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iv_6"
                android:text="@string/home"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/tv_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_market"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_98"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_market"
                android:layout_width="@dimen/iv_44"
                android:layout_height="@dimen/iv_44"
                android:layout_marginTop="@dimen/iv_6"
                android:src="@drawable/market_false"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iv_6"
                android:text="@string/dividend_market"
                android:textColor="@color/tv_no_click"
                android:textSize="@dimen/tv_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_assets"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_98"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_assets"
                android:layout_width="@dimen/iv_44"
                android:layout_height="@dimen/iv_44"
                android:layout_marginTop="@dimen/iv_6"
                android:src="@drawable/assets_false"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_assets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iv_6"
                android:text="@string/asset_management"
                android:textColor="@color/tv_no_click"
                android:textSize="@dimen/tv_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_me"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_98"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_me"
                android:layout_width="@dimen/iv_44"
                android:layout_height="@dimen/iv_44"
                android:layout_marginTop="@dimen/iv_6"
                android:src="@drawable/me_false"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/iv_6"
                android:text="@string/me"
                android:textColor="@color/tv_no_click"
                android:textSize="@dimen/tv_20" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
