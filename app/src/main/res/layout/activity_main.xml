<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.jh.wxqb.customview.NoScrollMainPager
        android:id="@+id/layout_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d43"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/d23"
                android:layout_height="@dimen/d23"
                android:layout_marginTop="@dimen/d3"
                android:src="@mipmap/home_true"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textStyle="bold"
                android:textColor="@color/new_home_text_color"
                android:textSize="@dimen/tv_20" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_quotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_quotes"
                android:layout_width="@dimen/d23"
                android:layout_height="@dimen/d23"
                android:layout_marginTop="@dimen/d3"
                android:src="@mipmap/routes_false"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_quotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dividend_quotes"
                android:textStyle="bold"
                android:textColor="@color/home_tv_no_click"
                android:textSize="@dimen/tv_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_market"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_market"
                android:layout_width="@dimen/d23"
                android:layout_height="@dimen/d23"
                android:layout_marginTop="@dimen/d3"
                android:src="@mipmap/market_false"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dividend_market"
                android:textStyle="bold"
                android:textColor="@color/home_tv_no_click"
                android:textSize="@dimen/tv_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_assets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_assets"
                android:layout_width="@dimen/d23"
                android:layout_height="@dimen/d23"
                android:layout_marginTop="@dimen/d3"
                android:src="@mipmap/assets_false"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_assets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asset_management"
                android:textStyle="bold"
                android:textColor="@color/home_tv_no_click"
                android:textSize="@dimen/tv_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_me"
                android:layout_width="@dimen/d23"
                android:layout_height="@dimen/d23"
                android:layout_marginTop="@dimen/d3"
                android:src="@mipmap/me_false"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me"
                android:textStyle="bold"
                android:textColor="@color/home_tv_no_click"
                android:textSize="@dimen/tv_20" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
