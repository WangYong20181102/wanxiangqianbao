<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_quotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d30"
        android:gravity="center"
        android:text="@string/dividend_quotes"
        android:textColor="@color/color_28283C"
        android:textSize="@dimen/s23"
        android:textStyle="bold" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d30"
        android:layout_marginLeft="@dimen/d7"
        app:tabSelectedTextColor="@color/color_28283C"
        app:tabTextColor="@color/color_9393A8"
        app:tabIndicatorColor="@color/color_28283C"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabIndicatorHeight="@dimen/d1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0.5"
        android:background="@color/color_E5E9EC" />


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_quotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d8"/>
</LinearLayout>