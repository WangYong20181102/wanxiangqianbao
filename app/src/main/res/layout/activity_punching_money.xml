<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.assets.PunchingMoneyActivity">

    <com.jh.wxqb.customview.CustomTitle
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10"
        app:canBack="true"
        app:titleText="@string/punching_money" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d262"
        android:layout_marginLeft="@dimen/d31"
        android:layout_marginTop="@dimen/iv_20"
        android:layout_marginRight="@dimen/d31"
        android:background="@drawable/recharge_bottom_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_qr"
            android:layout_width="@dimen/d188"
            android:layout_height="@dimen/d188"
            android:background="@color/white"
            android:scaleType="fitXY"
            app:layout_auto_baseheight="width" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d31"
        android:layout_marginTop="@dimen/d16"
        android:layout_marginRight="@dimen/d31"
        android:background="@drawable/recharge_address_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d16"
            android:text="fafsadfsgsagagssgsgsg"
            android:textColor="@color/color_C0C0CC"
            android:textSize="@dimen/s11"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:layout_marginBottom="@dimen/d11"
            android:background="@drawable/recharge_chain_type_bg"
            android:paddingLeft="@dimen/d16"
            android:paddingTop="@dimen/d5"
            android:paddingRight="@dimen/d16"
            android:paddingBottom="@dimen/d5"
            android:text="鏈類型：ERC20协议"
            android:textColor="@color/color_646482"
            android:textSize="@dimen/s15"
            android:textStyle="bold" />
    </LinearLayout>

    <com.meetsl.scardview.SCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d54"
        android:layout_marginLeft="@dimen/d31"
        android:layout_marginTop="@dimen/d50"
        android:layout_marginRight="@dimen/d31"
        android:layout_marginBottom="@dimen/d20"
        app:cardBackgroundColor="@color/color_828BE9"
        app:cardCornerRadius="@dimen/d16"
        app:cardElevation="@dimen/d3"
        app:cardLightDirection="top"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/d0">

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/copy_wallet_address"
            android:textColor="@color/white"
            android:textSize="@dimen/d19"
            android:layout_marginTop="-3dp"
            android:textStyle="bold" />
    </com.meetsl.scardview.SCardView>
</LinearLayout>
