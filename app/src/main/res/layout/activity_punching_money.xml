<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_style"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.assets.PunchingMoneyActivity">

    <com.jh.wxqb.customview.CustomTitle
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="@string/punching_money" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_650"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:layout_marginTop="@dimen/iv_20"
        android:background="@color/color_style"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_qr"
            android:layout_width="@dimen/iv_400"
            app:layout_auto_baseheight="width"
            android:layout_height="@dimen/iv_400"
            android:background="@color/layout_bg"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_60"
            android:textColor="@color/white"
            android:textSize="@dimen/iv_26" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_60"
            android:textColor="@color/white"
            android:textSize="@dimen/s20"
            android:text="鏈類型：ERC20协议"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:layout_marginTop="@dimen/d50"
        android:background="@drawable/all_btn_bg"
        android:gravity="center"
        android:text="@string/copy_wallet_address"
        android:textColor="@color/white"
        android:textSize="@dimen/iv_30" />
</LinearLayout>
