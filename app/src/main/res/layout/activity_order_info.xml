<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.me.mysendletter.OrderInfoActivity">

    <com.jh.wxqb.customview.CustomTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="@string/order_details" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:layout_marginTop="@dimen/iv_18">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dividend"
                android:textColor="@color/my_dividend_color"
                android:textSize="@dimen/iv_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_10"
                android:text="ETH/PKB"
                android:textColor="@color/black_text"
                android:textSize="@dimen/iv_28"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/the_dividend"
            android:textColor="@color/home_text_color"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delegate"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/iv_26" />
            <TextView
                android:id="@+id/tv_entrust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/iv_26" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_delegate_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.0"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volume"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.0"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_turnover"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_total_turnover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.0"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-06-07 14:30:28"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_of_return"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.0%"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/layout_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_90"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dividend_income"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/iv_26" />

        <TextView
            android:id="@+id/tv_dividend_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.0"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/iv_26" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/iv_50"
        android:layout_marginRight="@dimen/iv_50">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/sw_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_bottom"
            android:overScrollMode="never"
            android:scrollbars="none">

            <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                android:id="@+id/shop_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dividends_can_not_be_suspended"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/iv_22" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_stop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_90"
                android:layout_marginBottom="@dimen/iv_20"
                android:layout_marginTop="@dimen/iv_20"
                android:background="@color/home_text_color"
                android:gravity="center"
                android:text="@string/stop_the_dividend"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_30" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
