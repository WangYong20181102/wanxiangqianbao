<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d16"
    android:paddingLeft="@dimen/d15"
    android:paddingRight="@dimen/d15"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_news_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="公告内容公告内容公告内容公告内容..."
            android:textColor="@color/color_505050"
            android:maxEms="15"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/s12" />

        <TextView
            android:id="@+id/tv_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2019-09-23 12:40:00"
            android:textColor="@color/color_7E93A2"
            android:textSize="@dimen/s10" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginTop="@dimen/d16"
        android:background="@color/color_eff2f4" />
</LinearLayout>