<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_style"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.me.mysendletter.MySendLetterActivity">

    <com.jh.wxqb.customview.CustomTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="@string/my_dividend" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_74"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/ll_dividend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_dividend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/dividend"
                android:textColor="@color/my_dividend_color"
                android:textSize="@dimen/iv_32" />

            <View
                android:id="@+id/view_dividend"
                android:layout_width="@dimen/iv_26"
                android:layout_height="@dimen/iv_4"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/my_dividend_color"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/sell"
                android:textColor="@color/white"
                android:textSize="@dimen/iv_32" />

            <View
                android:id="@+id/view_sell"
                android:layout_width="@dimen/iv_26"
                android:layout_height="@dimen/iv_4"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/my_dividend_color"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_1"
        android:layout_marginLeft="@dimen/iv_20"
        android:layout_marginRight="@dimen/iv_20"
        android:background="@color/color_1b2a3e" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
