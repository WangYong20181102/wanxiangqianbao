<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jh.wxqb.ui.me.mysendletter.MySendLetterActivity">

    <com.jh.wxqb.customview.CustomTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="@string/current_entrustment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:layout_marginLeft="@dimen/d31"
        android:layout_marginTop="@dimen/d23"
        android:layout_marginRight="@dimen/d31"
        android:background="@drawable/market_place_top_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/ll_dividend"
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d42"
            android:layout_marginLeft="@dimen/d2"
            android:layout_weight="1"
            android:background="@drawable/current_commission_top_bg">

            <TextView
                android:id="@+id/tv_dividend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/dividend"
                android:textColor="@color/color_28283C"
                android:textSize="@dimen/s16"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_sell"
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d42"
            android:layout_marginRight="@dimen/d2"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/sell"
                android:textColor="@color/color_28283C"
                android:textSize="@dimen/s16"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
