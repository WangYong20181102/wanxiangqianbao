<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d15"
    android:layout_marginRight="@dimen/d15"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d35"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="15:54:55"
            android:textStyle="bold"
            android:textColor="@color/color_646482"
            android:textSize="@dimen/s11" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="賣出"
            android:textStyle="bold"
            android:textColor="@color/color_d6734b"
            android:textSize="@dimen/s11" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0"
            android:textStyle="bold"
            android:textColor="@color/color_484859"
            android:textSize="@dimen/s11"/>

        <TextView
            android:id="@+id/tv_turnover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0"
            android:textStyle="bold"
            android:textColor="@color/color_484859"
            android:textSize="@dimen/s11"/>


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="全部成交"
            android:textColor="@color/color_28283C"
            android:textStyle="bold"
            android:textSize="@dimen/s11"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>